<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.ChatController"
      spacing="10"
      prefWidth="400"
      prefHeight="500">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Mesaj Alanı -->
    <TextArea fx:id="mesajAlani"
              VBox.vgrow="ALWAYS"
              editable="false"
              wrapText="true"
              prefHeight="400"/>

    <!-- Alt Kısım: Input ve Buton -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="mesajInput"
                   HBox.hgrow="ALWAYS"
                   promptText="Mesajınızı yazın..."
                   onAction="#mesajGonder"/>
        <Button fx:id="gonderBtn"
                text="Gönder"
                onAction="#mesajGonder"/>
    </HBox>

</VBox>
